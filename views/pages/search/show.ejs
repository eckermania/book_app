<%- include('../../layout/head') %>
<body>
        <%- include('../../layout/header') %>
    <div class = "b"><h1>My Bookcase</h1></div> 
    <div class = "cshow">
       <p><a href="/">Home</a></p>
        <ul>
            <% arrayOfBooks.forEach(item => { %>
                <img src="<%= item.image %>"/>
                <li><%= item.title %></li>
                <li><%= item.author %></li>
                <li><%= item.description %></li>
                <li><%= item.isbn %></li>
                <button type="submit" class="add">Select This Book</button>
                <form action="/books" class="hidden" method="post" >
                    <fieldset>
                        <label >
                            <span>Title</span>
                            <input name="title" type="text" value="<%= item.title %>" required>
                        </label> 
                    </fieldset>
                    <input type="hidden" name="image_url" value="<%= item.image %>">
                    <fieldset>
                        <label >
                            <span>Author</span>
                            <input name="author" type="text" value="<%= item.author %>" required>
                        </label> 
                    </fieldset>
                    <fieldset>
                        <label >
                            <span>Description</span>
                            <input name="book_description" type="text" value="<%= item.description %>" required>
                        </label> 
                    </fieldset>
                    <fieldset>
                        <label >
                            <span>Bookshelf</span>
                            <select name="bookshelf" required>
                                <option disabled>Select Genre</option>
                                <option value="fantasy">Fantasy</option>
                                <option value="historical-fiction">Historical Fiction</option>
                                <option value="humor">Humor</option>
                                <option value="mystery">Mystery</option>
                                <option value="nonfiction">Nonfiction</option>
                                <option value="sci-fi">Science Fiction</option>
                            </select>
                        </label> 
                    </fieldset>
                    <button type="submit">Add to Bookcase</button>
                </form>
            <% }) %>
        </ul>
    </div> 
    <%- include('../../layout/footer') %>
    </div>
</body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type = "text/javascript" src = "js/app.js"></script>
</html>