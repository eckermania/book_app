<%- include('../../layout/head') %>
<body>
    <div class = grid-container>
        <%- include('../../layout/header') %>
       <div class = "b"><h4>Search by Title or Author</h4></div> 
       <div class = "c"> 
           <form action="/search" method="post">
            <input id="search" type="text" name="search" placeholder="Enter a title or author" required>
            <fieldset>
                <label for="title">
                    <span>Title</span>
                    <input type="radio" name="search" value="title" required>
                </label> 
            </fieldset>
            <fieldset>
                <label for="author">
                    <span>Author</span>
                    <input type="radio" name="search" value="author" required>
                </label>
            </fieldset>
            <button type="submit">Search the Google Book API</button>  
        </form>
        </div>
        <%- include('../../layout/footer') %>
        </div>
    </body>
</html>
